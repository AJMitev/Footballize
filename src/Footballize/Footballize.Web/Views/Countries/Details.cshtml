@model Footballize.Web.ViewModels.Countries.CountryDetailsViewModel
@{
    ViewData["Title"] = "Details";
}

<div id="breadcrumb">
    <nav aria-label="breadcrumb" role="navigation">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
            <li class="breadcrumb-item"><a asp-controller="Countries" asp-action="Index">Countries</a></li>
            <li class="breadcrumb-item active" aria-current="page">Details</li>
        </ol>
    </nav>
</div>



<div class="row">
    <div class="offset-4 col-md-8">
        <h2 class="title">Provinces and Towns in @Model.Name </h2>
    </div>
</div>

<div class="row">
    <div class=" offset-1 col-md-1 text-center">
        <img id="country-image" src="/img/flags/@(Model.Name.ToLower()).png" width="48px" />
    </div>
    <div class="col-md-3">
        <h2 class="">@Model.Name</h2>
    </div>
    <div class="offset-2 col-md-5 text-right align-self-center">
        <a asp-controller="Countries" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-info btn-round">
            <i class="material-icons">edit</i> Edit
            <div class="ripple-container"></div>
        </a>
        <a asp-controller="Provinces" asp-action="Add" asp-route-countryId="@Model.Id" class="btn btn-primary btn-round">
            <i class="material-icons">add</i>Province
            <div class="ripple-container"></div>
        </a>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        @foreach (var province in @Model.Provinces.OrderBy(p=>p.Name))
        {
            <div class="just-padding">
                <div class="list-group list-group-root well">
                    <a asp-controller="Provinces" asp-action="Details" asp-route-id="@province.Id" class="list-group-item"><i class="material-icons">account_balance</i> @province.Name</a>
                    <div class="list-group list-inline">
                        @foreach (var town in province.Towns.OrderBy(t=>t.Name))
                        {
                            <span  class="list-group-item list-inline-item"><i class="material-icons">place</i> @town.Name</span>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</div>