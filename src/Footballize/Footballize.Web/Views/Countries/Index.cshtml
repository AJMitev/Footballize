@model IEnumerable<Footballize.Web.Models.Countries.CountriesIndexViewModel>

@{
    ViewData["Title"] = "Countries";
}

<h1>@ViewData["Title"]</h1>

<div class="text-right">
    <a asp-action="Add">
        <button class="btn btn-primary btn-round">
            <i class="material-icons">add</i> New Country
            <div class="ripple-container"></div>
        </button>
    </a>
</div>
<table class="table table-borderless">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Country Name</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count(); i++)
        {
            <tr>
                <th scope="row">@(i + 1)</th>
                <td>@Model.ToList()[i].Name</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@Model.ToList()[i].Id" class="btn btn-info btn-fab btn-round" data-toggle="tooltip" data-placement="top" title="Modify">
                        <i class="material-icons">edit</i>
                        <div class="ripple-container"></div>
                    </a>
                    <a class="btn btn-danger btn-fab btn-round" asp-action="Delete" asp-route-id="@Model.ToList()[i].Id" data-toggle="tooltip" data-placement="top" title="Delete">
                        <i class="material-icons">delete</i>
                        <div class="ripple-container"></div>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<p>We have @Model.Count() countries in total.</p>