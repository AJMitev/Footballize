@model Footballize.Web.ViewModels.Countries.CountryInputModel
@{
    ViewData["Title"] = "Edit";
}

    <p class="h1">Modify Country: @Model.Name</p>

<h4></h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IsoCode" class="control-label"></label>
                <input asp-for="IsoCode" class="form-control" />
                <span asp-validation-for="IsoCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Edit" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <div class="offset-2 col-md-5">
        <img src="/img/flags/@(Model.Name.ToLower()).png" width="256"/>
    </div>
</div>

<div>
    <a asp-action="Index">Back to all countries.</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}s