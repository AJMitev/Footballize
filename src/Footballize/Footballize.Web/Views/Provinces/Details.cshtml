    ViewData["Title"] = "Details";
}

<div id="breadcrumb">
    <nav aria-label="breadcrumb" role="navigation">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
            <li class="breadcrumb-item"><a asp-controller="Provinces" asp-action="Index">Province</a></li>
            <li class="breadcrumb-item active" aria-current="page">Details</li>
        </ol>
    </nav>
</div>

<div class="row">
    <div class="col-md-5 offset-md-1">
        <h1>@Model.Name</h1>
    </div>
</div>
<div class="row">
    <div class="offset-md-1 col-md-1 text-center">
        <img src="/img/flags/@(Model.CountryName.ToLower()).png" width="48px" />

    </div>
    <div class="col-md-3">
        <h3>@Model.CountryName</h3>
