<div class="row">
    <div class="col-md-12">
        <div class="text-right">
            <a asp-action="Add">
                <button class="btn btn-primary btn-round">
                    <i class="material-icons">add</i> New Town
                    <div class="ripple-container"></div>
                </button>
            </a>
        </div>
        <table class="table table-borderless">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Name</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
            
            @for (int i = 0; i < Model.Towns.Count; i++)
            {
                <tr>
                    <th scope="row">@(i + 1)</th>
                    <td><a asp-action="Details" asp-route-id="@Model.Towns.ToList()[i].Id">@Model.Towns.ToList()[i].Name</a></td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@Model.Towns.ToList()[i].Id" class="btn btn-info btn-fab btn-round" data-toggle="tooltip" data-placement="top" title="Modify">
                            <i class="material-icons">edit</i>
                            <div class="ripple-container"></div>
                        </a>
                        <a class="btn btn-danger btn-fab btn-round" asp-action="Delete" asp-route-id="@Model.Towns.ToList()[i].Id" data-toggle="tooltip" data-placement="top" title="Delete">
                            <i class="material-icons">delete</i>
                            <div class="ripple-container"></div>
                        </a>
                    </td>
                </tr>
            }
            </tbody>
        </table>

        <p>We have @Model.Towns.Count records in total.</p>
    </div>
</div>