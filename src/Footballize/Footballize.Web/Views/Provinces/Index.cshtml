@model IEnumerable<Footballize.Web.ViewModels.Provinces.ProvincesIndexViewModel>
@{
    ViewData["Title"] = "All Provinces";
}


<div id="breadcrumb">
    <nav aria-label="breadcrumb" role="navigation">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
            <li class="breadcrumb-item active" aria-current="page">Provinces</li>
        </ol>
    </nav>
</div>
<div class="text-right">
    <a asp-action="Add">
        <button class="btn btn-primary btn-round">
            <i class="material-icons">add</i> New Province
            <div class="ripple-container"></div>
        </button>
    </a>
</div>
<table class="table table-borderless">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Country</th>
            <th scope="col">Towns</th>

            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count(); i++)
        {
            <tr>
                <th scope="row">@(i + 1)</th>
                <td><a asp-action="Details" asp-route-id="@Model.ToList()[i].Id">@Model.ToList()[i].Name</a></td>
                <td>@Model.ToList()[i].CountryName</td>
                <td>@Model.ToList()[i].TownsCount</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@Model.ToList()[i].Id" class="btn btn-info btn-fab btn-round" data-toggle="tooltip" data-placement="top" title="Modify">
                        <i class="material-icons">edit</i>
                        <div class="ripple-container"></div>
                    </a>
                    <a class="btn btn-danger btn-fab btn-round" asp-action="Delete" asp-route-id="@Model.ToList()[i].Id" data-toggle="tooltip" data-placement="top" title="Delete">
                        <i class="material-icons">delete</i>
                        <div class="ripple-container"></div>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<p>We have @Model.Count() records in total.</p>