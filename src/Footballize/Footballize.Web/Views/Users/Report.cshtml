@using Footballize.Models.Enums
@model Footballize.Web.ViewModels.Users.UsersReportInputModel
@{
    ViewData["Title"] = "Report";
}

<div id="breadcrumb">
    <nav aria-label="breadcrumb" role="navigation">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
            <li class="breadcrumb-item"><a asp-controller="Users" asp-action="Index">Users</a></li>
            <li class="breadcrumb-item active" aria-current="id">Report User</li>
        </ol>
    </nav>
</div>

<h1 class="title text-center">Report user for bad behavior</h1>
<hr />
<div class="row">
    <div class="col-12">
        <form asp-action="Report">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-8 offset-2">
                    <div class="form-group">
                        <label asp-for="UserName" class="control-label"></label>
                        <input asp-for="UserName" class="form-control" readonly="" />
                    </div>
                    <div class="form-group">
                        <label asp-for="FirstName" class="control-label"></label>
                        <input asp-for="FirstName" class="form-control" readonly="" />
                    </div>
                    <div class="form-group">
                        <label asp-for="LastName" class="control-label"></label>
                        <input type="text" asp-for="LastName" class="form-control" readonly="" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Type" class="control-label"></label>
                        <select asp-for="Type" asp-items="Html.GetEnumSelectList<ReportType>()" class="form-control">
                            <option value="-1">Select an option</option>
                        </select>
                        <span asp-validation-for="Type" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Text" class="control-label"></label>
                        <textarea type="text" asp-for="Text" class="form-control"> </textarea>
                        <span asp-validation-for="Text" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="text" asp-for="Id" value="@Model.Id" class="form-control" hidden=""/>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="AddAsync" class="btn btn-primary btn-lg btn-block" />
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}