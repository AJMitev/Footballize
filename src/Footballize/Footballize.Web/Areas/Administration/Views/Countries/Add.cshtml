@model Footballize.Web.Areas.Administration.ViewModels.Countries.CountryInputModel

@{
    ViewData["Title"] = "Add Country";
}

<h1>Add new country</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Add">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IsoCode" class="control-label"></label>
                <input asp-for="IsoCode" class="form-control" />
                <span asp-validation-for="IsoCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}